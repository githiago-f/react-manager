{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "out",
    "watch": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "declaration": true,
    "declarationDir": "out/typings",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src"
  ]
}
