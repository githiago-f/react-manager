{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "out",
    "watch": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "checkJs": false,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": [
    "src"
  ]
}
